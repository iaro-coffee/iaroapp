[Unit]
Description=iaroapp
After=network.target

[Service]
Type=simple
User=http
Environment=PYTHONUNBUFFERED=1
WorkingDirectory=/usr/share/iaroapp
ExecStart=/bin/bash -c 'python3 /usr/share/iaroapp/manage.py runserver 0.0.0.0:8000'
RestartSec=30
Restart=on-failure

[Install]
WantedBy=multi-user.target